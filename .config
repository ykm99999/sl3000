CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_sl3000_emmc=y

#
# CPU / SoC
#
CONFIG_PACKAGE_kmod-mediatek_hnat=y
CONFIG_PACKAGE_kmod-mediatek_wed=y
CONFIG_PACKAGE_kmod-mediatek_eth=y
CONFIG_PACKAGE_kmod-mediatek_ppe=y

#
# 内置 WiFi（MT7981）
#
CONFIG_PACKAGE_kmod-mt7981-firmware=y
CONFIG_PACKAGE_kmod-mt7915e=y

#
# 外挂 WiFi（MT7976CN）
#
CONFIG_PACKAGE_kmod-mt7996-firmware=y
CONFIG_PACKAGE_kmod-mt7996e=y

#
# eMMC 支持（128GB）
#
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-mmc-spi=y
CONFIG_PACKAGE_kmod-mmc-mtk=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_fdisk=y
CONFIG_PACKAGE_cfdisk=y
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_resize2fs=y

#
# SPI NOR（32MB）
#
CONFIG_PACKAGE_kmod-spi-dev=y
CONFIG_PACKAGE_kmod-spi-mt65xx=y
CONFIG_PACKAGE_uboot-envtools=y

#
# USB（如果你设备有）
#
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb-uhci=y

#
# 网络基础
#
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_ipv6helper=y

#
# LuCI（可选）
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-app-opkg=y

#
# 常用工具
#
CONFIG
