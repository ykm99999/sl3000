/dts-v1/;
#include "mt7981.dtsi"

/ {
    compatible = "siluoxing,sl3000-emmc", "mediatek,mt7981";
    model = "Siluoxing SL3000 (MT7981B + MT7976CN, 1G DDR4, 128G eMMC)";

    memory {
        device_type = "memory";
        reg = <0x40000000 0x40000000>; // 1GB DDR4
    };

    chosen {
        stdout-path = &uart0;
        bootargs = "console=ttyS0,115200n8";
    };

    aliases {
        led-boot = &led_status;
        led-failsafe = &led_status;
        led-running = &led_status;
        led-upgrade = &led_status;
    };
};

/* UART */
&uart0 {
    status = "okay";
};

/* GPIO / LED */
&gpio {
    status = "okay";
};

&leds {
    status = "okay";

    led_status: status {
        label = "sl3000:blue:status";
        gpios = <&gpio 12 GPIO_ACTIVE_HIGH>;
    };
};

/* Reset 按键 */
&keys {
    status = "okay";

    reset {
        label = "reset";
        gpios = <&gpio 0 GPIO_ACTIVE_LOW>;
        linux,code = <KEY_RESTART>;
    };
};

/* SPI NOR 32MB */
&spi0 {
    status = "okay";

    flash@0 {
        compatible = "jedec,spi-nor";
        reg = <0>;
        spi-max-frequency = <52000000>;
        #address-cells = <1>;
        #size-cells = <1>;
    };
};

/* eMMC 128GB */
&mmc0 {
    bus-width = <8>;
    max-frequency = <200000000>;
    cap-mmc-highspeed;
    non-removable;
    status = "okay";
};

/* 内置 WiFi (MT7981) */
&wifi {
    status = "okay";
};

/* 外挂 WiFi (MT7976CN) */
&pcie {
    status = "okay";

    wifi@0,0 {
        compatible = "mediatek,mt76";
        reg = <0 0 0 0 0>;
    };
};
